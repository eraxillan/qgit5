!insertmacro MUI_UNFUNCTION_DESCRIPTION_END


Function .onInit
    SetShellVarContext all
    ReadRegStr $R0 HKLM "SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\QGit" "UninstallString"
    StrCmp $R0 "" done

    MessageBox MB_OKCANCEL|MB_ICONEXCLAMATION "A previous version of QGit must be uninstalled before installing the new one." IDOK uninst
    Abort

uninst:
    ClearErrors
    ExecWait "$R0"

done:

FunctionEnd