Section "Start menu item" SecStartMenu
	SetShellVarContext all
	createDirectory "$SMPROGRAMS\QGit"
	createShortCut "$SMPROGRAMS\QGit\QGit.lnk" "$INSTDIR\qgit.exe"
;	createShortCut "$SMPROGRAMS\QGit\UserManual.lnk" "$INSTDIR\Usermanual.pdf"
SectionEnd

Section "un.Application" UnSecApplication
	SetShellVarContext all
;	RMDir /r "$INSTDIR\translations"
	Delete "$INSTDIR\uninstall.exe"
	Delete "$INSTDIR\qgit.exe"
;	Delete "$INSTDIR\UserManual.pdf"
	Delete "$INSTDIR\Qt*.dll"
	Delete "$INSTDIR\icu*.dll"
	Delete "$INSTDIR\libeay32.dll"
	Delete "$INSTDIR\ssleay32.dll"
	Delete "$INSTDIR\qt.conf"
	Delete "$INSTDIR\qdebug.txt"
	Delete "$INSTDIR\zlib1.dll"
	RMDir "$INSTDIR"

	RMDir "$SMPROGRAMS\QGit"

	DeleteRegKey HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\QGit"
SectionEnd

LangString DESC_SecApplication ${LANG_ENGLISH} "QGit program files"
LangString DESC_SecUpdateConfig ${LANG_ENGLISH} "Update the paths in the application settings according to the installation paths."
